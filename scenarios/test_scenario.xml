<?xml version="1.0"?>

<scenario xmlns="http://www.github/cliffe/SecGen/scenario"
	   xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	   xsi:schemaLocation="http://www.github/cliffe/SecGen/scenario">

	<!-- an example remote storage system, with a remotely exploitable vulnerability that can then be escalated to root -->
	<system>
		<system_name>escalation</system_name>
		<base platform="linux" type="server" module_path=".*debian_puppet_32.*"/>

		<vulnerability module_path=".*wordpress.*">
			<input into="version">
				<encoder type="string_selector">
					<input into="strings_to_encode">
						<value>4.1</value>
						<value>4.2</value>
						<value>4.3</value>
						<value>4.4</value>
						<value>4.5</value>
						<value>4.6</value>
						<value>4.7</value>
						<value>4.8</value>
						<value>4.9</value>
					</input>
				</encoder>
			</input>
		</vulnerability>

		<network type="private_network" range="172.16.0.0"/>
	</system>

</scenario>