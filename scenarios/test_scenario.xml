<?xml version="1.0"?>

<scenario xmlns="http://www.github/cliffe/SecGen/scenario"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.github/cliffe/SecGen/scenario">

  <!-- an example remote storage system, with a remotely exploitable vulnerability that can then be escalated to root -->
  <system>
    <system_name>gitlist</system_name>
    <base distro="Debian 9" type="desktop"/>

    <input into_datastore="huffman">
        <encoder module_path=".*huffman">
          <input into="strings_to_encode">
            <value>TEST123</value>
          </input>
        </encoder>
    </input>

    <vulnerability read_fact="images_to_leak">
      <input into="strings_to_leak">
        <datastore access="0">huffman</datastore>
      </input>
      <input into="images_to_leak">
        <datastore access="1">huffman</datastore>
      </input>
    </vulnerability>

  </system>

</scenario>
