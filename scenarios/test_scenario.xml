<?xml version="1.0"?>

<scenario xmlns="http://www.github/cliffe/SecGen/scenario"
          xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
          xsi:schemaLocation="http://www.github/cliffe/SecGen/scenario">

  <!-- an example remote storage system, with a remotely exploitable vulnerability that can then be escalated to root -->
  <system>
    <system_name>escalation</system_name>
    <base platform="linux" type="server"/>

    <service module_path=".*parameterised_website.*" read_fact="organisation">
      <input into="organisation">
        <generator type="organisation"/>
        <encoder type="line_selector">
          <input into="file_path">
            <value>lib/resources/structured_content/json_organisations</value>
          </input>
        </encoder>
      </input>
    </service>

    <network type="private_network" range="dhcp"/>
  </system>

</scenario>
